
" Use spaces instead of tabs
set expandtab

" be smart when using tabs
set smarttab

" 1 tab = 4 spaces
set shiftwidth=4
set tabstop=4

"line break at 80 characters
set lbr
set tw=80

" Auto indent / smart indent and warp
set ai
set si
set wrap

set hlsearch

autocmd FileType make setlocal noexpandtab

